
<% const dataToReadable=(date)=>{
    
    const date_=new Date(date);
    let month=['Jan', 'Feb', 'Mar', 'Apr', 'May', 'June', 'July', 'Aug', 'Sept', 'Oct', 'Nov', 'Dec'];
    let dd=date_.getDate()
    let mm=date_.getMonth()
    let monthText=date_.month(mm)
    let yyyy=date_.getFullYear()
    
    return `${isNaN(dd)?'00':dd}-${monthText}-${isNaN(yyyy)?'0000':yyyy}`
    
 } %> 

<% orders?.orders?.slice()?.reverse()?.forEach(order=>{ %> 
<section class=" gradient-custom-2">
    <div class="container py-5 ">
      <div class="row d-flex justify-content-strart align-items-center">
        <div class="col-md-10 col-lg-8 col-xl-12">
          <div class="card card-stepper" style="border-radius: 19px;">
            <div class="card-header p-4">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <p class="text-muted mb-2"> Order ID  <span class="fw-bold text-body"><%= order._id %> </span></p>
                  <p class="text-muted mb-0"> Place On <span class="fw-bold text-body"><%= order?.createdAt.getDate()+"/"+order?.createdAt.getMonth()+"/"+order?.createdAt.getFullYear()%> </span> </p>
                  <p class="text-muted">Delivery Address : <span class="text-body"><%= order.shippingAddress.street%> </span></p>
                  <p class="text-muted">pincode  : <span class="text-body"><%= order.shippingAddress.pincode%> </span></p>
                  <p class="text-muted">Contact Number : <span class="text-body"><%= order.shippingAddress.mobile%> </span></p>
                  <p class="text-muted">Email  : <span class="text-body"><%= order.shippingAddress.email%> </span></p>

                </div>
                <div>
                  <h6 class="mb-0"> <a href="#">Download Invoice</a> </h6>
              
                </div>
              </div>
            </div>
            <% order?.productDetails?.forEach(prodata=>{ %> 
            <div class="card-body p-4">
              <div class="d-flex flex-row mb-1 pb-1">
                <div class="flex-fill">
                  <h5 class="bold"><%= prodata.productsName %> </h5>
                  <h6 class="fw-bold"> Qty: <%= prodata.quantity %>  item</p>
                  <h5 class="mb-3"> $ <%= prodata?.productsPrice %>  <span class="small text-muted"> via (<%= order.paymentMethod %>)  </span></h4>
                  <p class="text-muted">Tracking Status : <span class="text-body">arriving today</span></p>


                  
                </div>
                <div>
                  <img class="align-self-center img-fluid"
                    src="/product-images/<%= prodata._id  %>0.jpg " width="150">
                    <% if(prodata.orderStatus){%>
                      <button id="cancelBtn" onclick="cancelOrder('<%= prodata._id%>','<%= order._id %>')" style="width:10%;" class="btn btn-danger mt-1 p=0 border border-danger rounded">Cancel this item</button>
                      <%}else{%>
                      <button disabled id="cancelBtn" style="width:10%;" class="btn btn-danger mt-1 p=0 border border-danger rounded">Cancel this item</button>
                        <%}%>
                </div>
              </div>
              <ul id="progressbar-1" class="mx-0 mt-0 mb-5 px-0 pt-0 pb-0">
                <li class="step0 active" id="step1"><span
                    style="margin-left: 22px; margin-top: 12px;">PLACED</span></li>

                <li class="step0 active text-center" id="step2"><span
                    style="margin-left: 22px; margin-top: 12px;">SHIPPED</span></li>
                    
                <li class="step0 active text-muted text-end" id="step3"><span
                    style="margin-right: 22px;">DELIVERED</span></li>
              </ul>
            </div>
            <% }) %> 
       
            <div class="card-footer p-3">
              <div class="d-flex justify-content-around  ">
                <h5 class="fw-normal mb-0"><a href="#!"> </a></h5>
                <div class="border-start h-100"></div>
                <% if(order.paymentStatus==0){%>
                  <h5 class="text-danger"><a href="#!">payment : pending </a></h5>
                  <%}else{%>
                    <h5 class=" text-success">payment : Completed </h5>
                    <%}%>
                <div class="border-start h-100"></div>
                <h5 class="fw-normal mb-0"><a href="#!">Order Total: <%= order.totalPrice %> </a></h5>
                <div class="border-start h-100"></div>
                <h5 class="fw-normal mb-0"><a href="#!" class="text-muted"><i class="fas fa-ellipsis-v"></i></a>
                </h5>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>   
  </section>
<% }) %> 


<script>
    function cancelOrder(prodId,orderId){
        console.log(orderId,prodId);

        $.ajax({
            url:'/cancel-order',
            method:'post',
            data:{
                orderId:orderId,
                prodId:prodId
            },
            beforeSend:()=>{
                return confirm('this perticular order will be cancelled')
            },
            success:(response)=>{
                if(response.status){
                  document.querySelector('#cancelBtn').disabled = true;
                }
                window.location.reload()
            }
        })
    }


 

</script>

