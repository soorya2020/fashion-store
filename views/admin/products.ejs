<div class="col-lg-10 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Products </h4>
            <p class="card-description">
            </p>
            <a type="button" href="/admin/add-products" class="btn btn-outline-info btn-md btn-icon-text ti-upload btn-icon-prepend ">                                                  
                Upload
            </a>
            <div class="table-responsive pt-3">
                
                <table  class="table table-hover">
                    <thead class="thead-light flip-content"">
                        <tr class="header">
                            <th>
                                #
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                               Stock
                            </th>
                            <th>
                                Amount
                            </th>
                            <th>
                                OfferAmount
                            </th>
                            <th>
                                Category
                            </th>
                            <th>
                               Edit
                            </th>
                            <th>
                                Delete
                             </th>
                        </tr>
                    </thead>
                    <tbody>
                        <% products.forEach((products,index)=>{ %> 
                            
                        <tr>
                            <td>
                                <%- index+1 %> 
                            </td>
                            <td>
                               <img  src='/product-images/<%= products.img[0] %>' alt="img goes here">  
                            </td>
                            <td>
                                <%- products.name %> 
                            </td>
                            <td>
                                <!-- <div class="progress">
                                    <div class="progress-bar bg-success" role="progressbar" style="width: 25%"
                                        aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                </div> -->
                                <%- products.stock %> 
                            </td>
                            <td>
                                <%- products.price %> 
                            </td>
                            <td>
                                <%- products.offerPrice %> 
                            </td>
                            <td>
                                <%- products.category %> 
                            </td>
                            <td>
                                <a type="button" href=./edit-products/<%= products._id%> class="btn btn-info btn-sm btn-icon-text ti-file btn-icon-append">
                                    Edit                
                                </a>
                            </td>
                            <td>
                                <a type="button" href="/admin/delete-products/<%- products._id%>" class="btn btn-danger btn-sm btn-icon-text ti-alert btn-icon-prepend"
                                onclick="return confirm('are you sure want to delete <%- products.name  %> ?')">
                                    Delete
                                </a>
                            </td>
                        </tr>
                        <% }) %> 
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


