<div class="col-lg-10 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Orders </h4>
            <p class="card-description">
            </p>
            <!-- <a type="button" href="/admin/add-products" class="btn btn-outline-info btn-md btn-icon-text ti-upload btn-icon-prepend ">                                                  
                Upload
            </a> -->
            <div class="table-responsive pt-3">
                
                <table  class="table table-hover">
                    <thead class="thead-light flip-content"">
                        <tr class="header">
                            <th>
                                #
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Price/Qty
                            </th>
                            <th>
                                Order ID
                            </th>
                            <th>
                                status
                            </th>
                            <th>
                               progress
                            </th>
                            <th>
                                user
                             </th>
                        </tr>
                    </thead>
                    <tbody>
                        <% console.log(orders); %> 
                        <% for(let i=0;i<orders.length;i++) {%> 
                        <% orders[i].productDetails?.forEach((products,index)=>{ %> 
                            
                        <tr>
                            <td>
                                <%- index+1==1?'user':index+1 %> 
                            </td>
                            <td>
                               <img  src=/product-images/<%= products?._id %>0.jpg alt="img goes here">  
                            </td>
                            <td>
                                <%- products?.productsName %> 
                            </td>
                            <td>
                                <!-- <div class="progress">
                                    <div class="progress-bar bg-success" role="progressbar" style="width: 25%"
                                        aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                </div> -->
                                <%- products?.productsPrice %> /<%= products?.quantity  %> 
                            </td>
                            <td>
                                <%- orders[i]._id %> 
                            </td>
                            <td>
                                <%- products.orderStatus %> 
                            </td>
                            <td >
                                <select  class="form-select form-select-lg mb-3"  aria-label=".form-select-lg example">
                                    <!-- <option selected>updata progress</option> -->
                                    <option value="1">order dispatched</option>
                                    <option value="2">on the way</option>
                                    <option value="3">out of  delivery</option>
                                    <option value="3">delivered</option>
                                  </select>
                            </td>
                            <td>
                                <%= orders[i].mobile %> 
                            </td>
                            
                        </tr>
                        <% }) %> 
                        <% } %> 
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


